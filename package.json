  "author": "artstesh",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artstesh/forger.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "28.1.0",
    "jest": "28.1.1",
    "prettier": "2.6.2",
    "ts-jest": "28.0.4",
    "ts-transformer-keys": "0.4.3",
    "tslint": "6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "1.5.13",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "typescript": "^4.4.2"
  }
